@model FedeltaSystem.Models.tblUsuarios

@{
    ViewBag.Title = "Eliminar";
}

    <div class="row content container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading text-center"><h4>CONTROL DE USUARIO</h4></div>
            <div class="panel-body bg-gray">

                <div>
                    <h5 class="alert alert-danger">Seguro de Eliminar el Registro?</h5>
                    <dl class="dl-horizontal">
                        <dt>
                            Nombre de Empleado
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Empleados.NombreEmpleado)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Roles.Rol)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Roles.Rol)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Usuario)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Usuario)
                        </dd>

                        <dt>
                            Contraseña
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Clave)
                        </dd>


                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                <div class="col-sm-offset-9 col-sm-3" align="right">
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    @Html.ActionLink("Atras", "Index", null, new { @class = "btn btn-info" })
                </div>
                    }
                </div>
            </div>
        </div>
    </div>
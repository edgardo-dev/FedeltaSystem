@model FedeltaSystem.Models.tblRoles

@{
    ViewBag.Title = "Eliminar";
}

<div class="panel panel-default">
    <div class="panel-heading"><h4 class="text-info">Registros de Roles</h4></div>
    <div class="panel-body">

        <div>
            <h5 class="alert alert-danger">Seguro de Eliminar el Registro?</h5>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Rol)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Rol)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="ELIMINAR" class="btn btn-danger" /> |
                    @Html.ActionLink("ATRAS", "Index", null, new { @class = "btn btn-info" })
                </div>
            }
        </div>
    </div>
</div>

@model IEnumerable<FedeltaSystem.Models.tblRoles>

@{
    ViewBag.Title = "Roles";
}

<div class="panel panel-default">
    <div class="panel-heading"><h4 class="text-info">Registros de Roles</h4></div>
    <div class="panel-body">

        <p class="text-right">
            <a href="@Url.Action("Create")" class="btn btn-info"><i class="glyphicon glyphicon-plus"></i>NUEVO</a>
        </p>

        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Rol)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rol)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("MODIFICAR", "Edit", new { id = item.IdRol }, new { @class = "btn btn-success" })
                        @Html.ActionLink("DETALLES", "Details", new { id = item.IdRol }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("ELIMINAR", "Delete", new { id = item.IdRol }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
